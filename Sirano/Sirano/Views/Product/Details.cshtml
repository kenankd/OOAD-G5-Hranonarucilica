@model Sirano.Models.Product

@{
    ViewData["Title"] = "Details";
    string size = "unknown";

    if (Model is Sirano.Models.Clothing clothing)
    {
        size = clothing.size;
    }
    else if (Model is Sirano.Models.Footwear footwear)
    {
        size = footwear.size;
    }
}
<partial name="_Header" />
<div style="display: flex; align-items: stretch; justify-content: center; min-height: 100vh;">
    <div style="flex: 1; display: flex; justify-content: center;">
        <img src="@Url.Content(Model.image)" alt="@Model.name" style="max-width: 100%; max-height: 400px;">
    </div>

    <div>
        <h2>@Model.name</h2>
        <p>@Model.summary</p>
        <h3>Price: @Model.price$</h3>
        <h3>Size: @size</h3>
        <button style="padding: 10px; width: 100%; margin-top: 20px;">Add to cart</button>
    </div>
</div>

