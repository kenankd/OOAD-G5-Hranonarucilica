@model IEnumerable<Sirano.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<partial name="_Header" />

<style>
   
    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: left; /* center items horizontally */
        align-items: center; /* center items vertically */
        max-width: 1150px;
        min-height: 340px;
        min-width:1000px;
        /* 200px (width of image) * 5 + 10px (gap between images) * 4 = 1050px */
         /* center the container */
    }

    

    .product-card {
        width: 210px; /* make images bigger */
        height: 310px; /* make images bigger */
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f0f0f0;
        margin: 20px; /* add some space between images */
    }

    .product-image {
        max-width: 100%;
        max-height: 100%;
    }

    
</style>


<form method="get" action="/Product/Index">
    <select name="productType" onchange="this.form.submit()">
        <option value="all">All</option>
        <option value="footwear">Footwear</option>
        <option value="clothing">Clothing</option>
    </select>
</form>


<div class="container">
    @{
        int counter = 0;
    }
    @foreach (var product in Model)
    {
        if (counter < 10) // Only show the first 10 products
        {
            string actionLink = Url.Action("Details", "Product", new { id = product.id });

            <a href="@actionLink">
                <div class="product-card">
                    <img src="@Url.Content(product.image)" alt="@product.name" class="product-image">
                </div>
            </a>
            counter++;
        }
    }

   
</div>
